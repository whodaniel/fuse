{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*.test.ts",
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "references": [
    { "path": "../types" }
  ]
}
