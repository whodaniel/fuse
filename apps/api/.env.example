# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
EMAIL_FROM_NAME=Your App
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# Application
FRONTEND_URL=https://yourapp.com
APP_NAME=YourApp

# Database Configuration
DATABASE_TYPE=postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fuse?schema=public"
MONGODB_URL=mongodb://localhost:27017/fuse

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=fuse

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# MCP (Multi-Capability Protocol) Configuration
MCP_REGISTRY_PORT=3002 # Port for the MCP Registry WebSocket server
MCP_REGISTRY_API_KEY=generate-a-secure-random-key # API Key used by MCPRegistryService to authenticate with this API
API_URL=http://localhost:3000/api # Base URL of this API (used by MCPRegistryService)
