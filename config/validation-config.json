{
  "typescript": {
    "strict": true,
    "checkPhases": [1, 2, 3, 4],
    "ignorePatterns": ["**/*.test.ts", "**/*.stories.tsx"]
  },
  "testing": {
    "coverage": {
      "statements": 80,
      "branches": 70,
      "functions": 80,
      "lines": 80
    },
    "timeout": 30000
  },
  "build": {
    "requiredFiles": [
      "dist/index.html",
      "dist/assets",
      "dist/static"
    ]
  },
  "e2e": {
    "baseUrl": "http://localhost:3000",
    "startupTimeout": 10000,
    "testTimeout": 60000
  }
}