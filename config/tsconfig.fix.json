{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../dist"]
}
