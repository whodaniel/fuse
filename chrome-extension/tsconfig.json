{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDirs": ["src", "."],
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["chrome", "jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "websocket-server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
