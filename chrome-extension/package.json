{
  "name": "the-new-fuse-chrome-extension",
  "version": "1.0.0",
  "description": "The New Fuse - Text Input Manager Chrome Extension",
  "main": "background.js",
  "private": true,
  "type": "module",
  "scripts": {
    "generate-icons": "node generate-icons.cjs",
    "generate-notification-icons": "node scripts/generate-notification-icons.cjs",
    "build": "webpack --mode production",
    "prebuild": "yarn generate-icons && yarn generate-notification-icons",
    "dev": "webpack --mode development --watch",
    "package": "node scripts/package-extension.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "clean": "rimraf dist icons coverage .turbo node_modules/.cache",
    "clean:build": "rimraf dist icons coverage",
    "clean:deps": "rimraf node_modules",
    "clean:cache": "rimraf node_modules/.cache .turbo",
    "typecheck": "tsc --noEmit",
    "build:ts": "./build.sh",
    "dev:ts": "./dev.sh"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/fontawesome-free": "^6.5.1",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@types/highlight.js": "^10.1.0",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "dompurify": "^3.0.0",
    "highlight.js": "^11.11.1",
    "pako": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/chrome": "^0.0.254",
    "@types/dompurify": "^3.0.0",
    "@types/identity-obj-proxy": "^3.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "canvas": "^2.11.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "cssnano": "^6.0.3",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.6",
    "rimraf": "^5.0.5",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-chrome/setup.js",
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.(js|ts)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "webextensions": true,
      "jest": true
    }
  },
  "resolutions": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.10",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0"
  }
}
