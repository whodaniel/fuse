{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "src",
    "composite": true
  },
  "compileOnSave": true,
  "references": [
    { "path": "../packages/types" },
    { "path": "../packages/utils" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
