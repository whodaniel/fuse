{
  "name": "the-new-fuse",
  "displayName": "The New Fuse",
  "description": "AI-powered chat extension with LLM fallback",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "theNewFuse",
          "title": "The New Fuse",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "theNewFuse": [
        {
          "type": "webview",
          "id": "theNewFuse.tabbedContainer",
          "name": "The New Fuse",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "the-new-fuse.showChat",
        "title": "ðŸ’¬ Show Chat",
        "category": "The New Fuse"
      },
      {
        "command": "theFuse.startChat",
        "title": "Start AI Chat",
        "category": "The New Fuse"
      },
      {
        "command": "theFuse.clearChat",
        "title": "Clear Chat",
        "category": "The New Fuse"
      },
      {
        "command": "theFuse.checkLLM",
        "title": "Check LLM Status",
        "category": "The New Fuse"
      },
      {
        "command": "the-new-fuse.selectLLMModel",
        "title": "Select Language Model",
        "category": "The New Fuse"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "theFuse.clearChat",
          "when": "view == theFuseChat",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "theFuse.checkLLM",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.10",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  }
}
