{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "media/**/*",
    "test-*.ts",
    "test-*.js",
    "*.test.ts",
    "*.test.js",
    "node_modules",
    "out",
    "src/test/**/*"
  ]
}
